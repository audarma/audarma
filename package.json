{
  "name": "audarma",
  "version": "0.1.0-alpha.0",
  "description": "Progressive translation system for React/Next.js with smart caching and view-level translation tracking",
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "react",
    "nextjs",
    "llm",
    "progressive",
    "localization"
  ],
  "author": "Eldar Syzdykov",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run type-check && npm run build"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0 || ^16.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/audarma/audarma.git"
  },
  "bugs": {
    "url": "https://github.com/audarma/audarma/issues"
  },
  "homepage": "https://github.com/audarma/audarma#readme"
}
